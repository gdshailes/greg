<%= simple_form_for(@entry, url: diary_entry_path(@entry), method: :patch) do |f| %>

  <%= f.input :title, label: 'Title' %>
  <%= f.input :body, label: 'Body' %>
  <%= f.button :submit, 'Save' %>
  <%= link_to 'Cancel', diary_entry_index_path %>
  <%= link_to 'Delete', @entry, method: :delete %>

<% end %>