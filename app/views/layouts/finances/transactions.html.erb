<!DOCTYPE html>
<html>
  <head>
    <%= csrf_meta_tags %>
    <title>
      Greg's Finances
    </title>
    <%= favicon_link_tag 'favicon.ico' %>
    <meta name="viewport" content="width=500">
    <%= stylesheet_link_tag 'finances', media: 'all', 'data-turbolinks-track': 'reload' %>
    <script src="http://code.jquery.com/jquery-2.2.3.min.js"></script>
    <%= javascript_include_tag :application %>
  </head>

  <body>
    <div class='mobile-header'>
      <a href='#' class='show-menu command-button'><i class="fa fa-bars"></i></a><% if @account && @account.persisted? %><%= link_to 'Add Transaction', new_finances_account_transaction_path(@account), class: 'command-button' %><% else %><%= link_to 'Add Account', new_finances_account_path, class: 'command-button' %>
      <% end %>
    </div>
    <aside class='main-menu'>
      <nav class='menu'>
        <%= render partial: 'finances/menu' %>
      </nav>
    </aside>
    <div class='page'>
      <main>
        <%= yield %>
        <div class='footer'>
          <%= render partial: 'finances/footer' %>
        </div>
      </main>
    </div>
  </body>
</html>
