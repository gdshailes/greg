

  <div class="countdown">
    Rat Race starts in:<br>
    <span class="days">0</span> days
    <span class="hours">0</span> hours
    <span class="minutes">0</span> minutes
    <span class="seconds">0</span> seconds
  </div>
	<div id="slideshow">
		<div id="carousel">
			<% @images.each do |image| %>
				<div class='borisPic'>
					<%= ('<img max-width:640px; max-height:480px; src="data:image/jpg;base64,%s">' % Base64.encode64(image.filedata)).html_safe %>
				</div>
			<% end %>
		</div>
		<a href="#" class="navLink" id="prev"><%= image_tag("prev.png") %></a>
		<a href="#" class="navLink next" id="next"><%= image_tag("next.png") %></a>
	</div>
	<div id='caption'></div>
