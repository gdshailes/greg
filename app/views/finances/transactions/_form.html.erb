<%= f.error_notification %>

<div class="form-inputs">
  <%= f.input :transaction_date, as: :date %>
  <%= f.input :amount, as: :decimal, autofocus: true %>
  <%= f.input :description %>
  <%= f.input :deposit, as: :boolean %>
  <%= f.input :reconciled, as: :boolean %>
</div>

<div class="form-actions">
  <%= f.button :submit, 'Save Transaction' %>
</div>
