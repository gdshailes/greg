<div class='new-entry-menu-item'>
  <% if @account && @account.persisted? %>
    <%= link_to 'Add Transaction', new_finances_account_transaction_path(@account) %>
  <% else %>
    <%= link_to 'Add Account', new_finances_account_path %>
  <% end %>
</div>
<ul class='menu'>

  <% if @account && @account.persisted? %>
    <%= render partial: 'finances/accounts/menu_item', locals: {account: @account} %>
    <li>
      <%= link_to "Edit #{@account.name}", edit_finances_account_path(@account) %>
    </li>
    <li>
      <%= link_to "Bills for #{@account.name}", finances_account_bills_path(@account) %>
    </li>
  <% end %>

  <% if @accounts.any? %>
    <% @accounts.each do |account| %>
      <% unless account == @account %>
        <%= render partial: 'finances/accounts/menu_item', locals: {account: account} %>
      <% end %>
    <% end %>
  <% end %>
  <li>
    <%= link_to 'Add Account...', new_finances_account_path %>
  </li>
</ul>