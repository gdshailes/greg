<div class='panel header'>
  <span>Hello, <%= current_user.display_name %>!</span>
  <ul>
    <li>
      <a href='/ratrace'>Go back</a>
    </li>
  </ul>
</div>

<h1 class='panel-header'>Create a New Post</h1>
<div class='panel-body edit-post'>
  <%= form_for :ratrace_post, :url => ratrace_posts_path do |f| %>
    <%= f.text_field :title, placeholder: 'Title', class: 'input' %>
    <%= f.text_area :body, placeholder: 'Enter your article here', class: 'input' %>
    <div class='actions'>
      <label>Upload a JPG Image
        <span><%= f.file_field :image %></span>
      </label>
      <%= f.submit "Save" %>
    </div>
  <% end %>
</div>

<h1 class='panel-header'>Edit an Existing Post</h1>
<div class='panel-body center '>
  <% @posts.each do | post |%>
    <%= link_to edit_ratrace_post_path(post.id), class: 'button' do %>
      <strong><%= post.title %></strong> - <%= post.user.first_name %>, <%= post.short_created_at %>
    <% end %>
  <% end %>
</div>