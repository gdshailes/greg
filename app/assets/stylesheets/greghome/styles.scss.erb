html {
  font-size: 100%;
}

body {
  padding: 0;
  margin: 0;
  width: 100%;
  height: 100vh;
  font-family: "Avenir", "Gill Sans", "Helvetica", "Arial", sans-serif;
  background-color: $background_1;
  background-image: url("/img/greghome/background/random");
  @media screen and (max-width: $break_width) {
    background-image: none;
    background-color: $background_1;
  }
  background-repeat: no-repeat;
  background-attachment: fixed;
  background-position: center;
  background-size: 1800px;
  text-align: center;
}

nav {
  margin: 6rem 2rem 0 2rem;
  font-family: "Avenir Next Condensed";
  font-size: 1.5rem;
  color: white;

  & > ul {
    display: flex;
    flex-direction: row;
    justify-content: space-around;
    align-items: center;
    list-style: none;
    padding-left: 0;

    & > li {
      padding: 1rem;
      border: 0.1rem solid rgba(255, 255, 255, 0.4);
      box-shadow: 0 0.3rem 0.9rem 0.9rem rgba(0, 0, 0, 0.7);
      border-radius: 1.9rem;

      <% (1..6).each do |n| %>
        &:nth-of-type(<%= n %>) {
          transform: <%= ['rotate(1deg)', 'rotate(-1deg)', 'rotate(2deg)', 'rotate(-2deg)', 'rotate(3deg)', 'rotate(-3deg)', 'rotate(4deg)', 'rotate(-4deg)'].sample %>;
          background-color: <%= case n when 1 then 'rgba(0, 0, 0, 0.5)' when 2 then 'rgba(0, 0, 0, 0.4)' when 3 then 'rgba(0, 0, 0, 0.6)' when 4 then 'rgba(0, 0, 0, 0.5)' else 'rgba(0, 0, 0, 0.3)' end %>;
        }
      <% end %>
      backdrop-filter: blur(1rem);

      h1 {
        font-size: 1.8rem;
        font-weight: 500;
        padding: 0.2rem 0;
        margin: 0 0 0.5rem 0;
        background-color: rgba(0, 0, 0, 0.4);
        border: 0.1rem solid rgba(255, 255, 255, 0.4);
        border-radius: 1.9rem;
      }

      & > ul {
        text-decoration: none;
        display: flex;
        flex-direction: column;
        justify-content: top;
        list-style: none;
        padding: 0;

        & > li {
          text-indent: none;
          padding: 0;
          & a {
            display: block;
            outline: none;
            text-decoration: none;
            color: white;
            border-radius: 1rem;
            padding: 0.75rem;
            transition: background-color 0.5s;
            &:focus {
              background-color: rgba(195, 120, 0, 0.5);
            }
            &:hover {
              background-color: rgba(195, 120, 0, 1);
            }
          }
        }
      }
    }
  }
}



ul li ul li.break {
  margin: 0.2rem 10%;
}

form#f {
  position: absolute;
  top: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 80%;
  text-align: left;
  @media screen and (max-width: $break_width) {
    display: none;
  }
}

input.googleSearch {
  box-sizing: border-box;
  height: 1.5rem;
  border-radius: 1.5rem;
  border: 0.1rem solid rgba(255, 255, 255, 0.4);
  box-shadow: 0 0.3rem 0.9rem 0.9rem rgba(0, 0, 0, 0.7);
  color: $text-box-ink;
  background: rgba(0, 0, 0, 0.3);
  backdrop-filter: blur(1rem);
  display: block;
  width: 100%;
  font-size: 1.5rem;
  padding: 1.4rem 0;
  margin-bottom: 0.3rem;
  outline: none;
  text-indent: 2rem;
  &::placeholder {
    color: $link-ink;
    opacity: 0.8;
  }
}

button.GoogleButton {
  width: 0;
  margin: 0;
  padding: 0;
  height: 0;
  border: none;
  overflow: hidden;
}


@media screen and (max-width: $break_width) {
  div.QuickLinksPanel {
    width: 80%;
  }
}

div.countdown, div.finished, div.under-way {
  text-align: center;
  font-size: 14px;
  color: silver;
  background-color: rgba(0, 0, 0, 0.5);
}

span.seconds, span.minutes, span.hours, span.days, span.weeks {
  color: white;
  font-weight: bold;
}

div.denied, div.run-away {
  position: absolute;
  padding: 0;
  margin: 0;
  width: 100%;
  height: 100%;
  background-repeat: no-repeat;
  background-attachment: fixed;
  background-position: center;
}

div.denied {
  background-image: image-url("go-away-now.jpg");
}

div.run-away {
  background-image: image-url("382.png");
}

div.denied-footer {
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 50px;
  background-color: black;
  color: silver;
  font-size: 0.8em;
  vertical-align: middle;
}

div.denied-footer a, div.denied-footer a:visited {
  margin: 0;
  padding: 20px;
  display: inline;
  background-color: $h1_paper;
  color: $h1_ink;
}

div.denied-footer a:hover {
  background-color: $link_paper;
  color: $link_ink;
}

.hidden {
  display: none;
}
