 html {
  font-size: 100%;
}

body {
  padding: 0;
  margin: 0;
  width: 100%;
  height: 100vh;
  font-family: "Avenir", "Gill Sans", "Helvetica", "Arial", sans-serif;
  background-color: $background_1;
  background-image: url('/img/greghome/background/random');
  @media screen and (max-width: $break_width) {
    background-image: none;
    background-color: $background_1;
  }
  background-repeat: no-repeat;
  background-attachment: fixed;
  background-position: center;
  background-size: 1800px;
  text-align: center;
}

nav {
  margin: 140px 40px 0 40px;
  font-family: "Chalkduster";
  font-size: 2rem;
}

ul {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
  list-style: none;
  padding-left: 0;
}

li {
  padding: 12px;
  box-shadow: 6px 6px 12px 6px rgba(0,0,0,0.5);

  h1 {
    text-decoration: underline;
    font-size: 2.3rem;
    font-weight: unset;
  }

  <% (1..6).each do |n| %>
    &:nth-of-type(<%= n %>) {
      transform: <%= ['rotate(1deg)', 'rotate(-2deg)', 'rotate(3deg)', 'rotate(-1deg)', 'rotate(-4deg)', 'rotate(-2deg)'].sample %>;
      background-color: <%= case n when 1 then '#f1f170' when 2 then '#f18ef0' when 3 then '#6abb6a' when 4 then '#6aabbb' else 'silver' end %>;
    }
  <% end %>
}

li a {
  display: block;
  text-decoration: none;
  color: black;
  border-radius: 15px;
  padding: 10px;
  transition: background-color 0.75s, box-shadow 0.75s, border-color 0.75s;
  border-right: 2px solid rgba(255,255,255,0);
  border-bottom: 2px solid rgba(255,255,255,0);
  &:hover {
    background-color: rgba(0,0,0,0.1);
    box-shadow: inset 4px 4px 5px 5px rgba(0,0,0,0.3);
    border-right: 2px solid rgba(255,255,255,0.5);
    border-bottom: 2px solid rgba(255,255,255,0.5);
  }
}

ul li ul {
  text-decoration: none;
  display: flex;
  flex-direction: column;
  justify-content: top;
}

ul li ul li {
  background: none !important;
  box-shadow: none;
  padding: 0;
}

ul li ul li.break {
  height: 1px;
  margin: 0.2em 10%;
}

form#f {
  position: absolute;
  top: 30px;
  left: 50%;
  transform: translateX(-50%);
  width: 80%;
  text-align: left;
  @media screen and (max-width: $break_width) {
    display: none;
  }
}

input.googleSearch {
  box-sizing: border-box;
  height: 1em;
  color: $text-box-ink;
  background: rgba(0, 0, 0, 0.6);
  border-top: none;
  border-right: none;
  border-bottom: none;
  border-left: none;
  display: block;
  width: 100%;
  font-size: 1.5em;
  padding: 1em 0;
  margin-bottom: 0.3em;
  outline: none;
  text-indent: 1em;
  &::placeholder {
    color: $link-ink;
    opacity: 0.2;
  }
}

button.GoogleButton {
  width: 0;
  margin: 0;
  padding: 0;
  height: 0;
  border: none;
  overflow: hidden;
}


@media screen and (max-width: $break_width) {
  div.QuickLinksPanel {
    width: 80%;
  }
}

div.countdown, div.finished, div.under-way {
  text-align: center;
  font-size: 14px;
  color: silver;
  background-color: rgba(0,0,0,0.5);
}

span.seconds, span.minutes, span.hours, span.days, span.weeks {
  color: white;
  font-weight: bold;
}

div.denied, div.run-away {
  position: absolute;
  padding: 0;
  margin: 0;
  width: 100%;
  height: 100%;
  background-repeat: no-repeat;
  background-attachment: fixed;
  background-position: center;
}

div.denied {
  background-image: image-url("go-away-now.jpg");
}

div.run-away {
  background-image: image-url("382.png");
}

div.denied-footer {
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 50px;
  background-color: black;
  color: silver;
  font-size: 0.8em;
  vertical-align: middle;
}

div.denied-footer a, div.denied-footer a:visited {
  margin: 0;
  padding: 20px;
  display: inline;
  background-color: $h1_paper;
  color: $h1_ink;
}

div.denied-footer a:hover {
  background-color: $link_paper;
  color: $link_ink;
}

.hidden {
  display: none;
}
